<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.Activity.LoginActivity">

    <TextView
        android:text="이름"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="29dp"
        android:id="@+id/nameText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입:"
        android:id="@+id/signupText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/inputName"
        android:layout_alignBaseline="@+id/nameText"
        android:layout_alignBottom="@+id/nameText"
        android:layout_centerHorizontal="true"
        android:hint="실명을 입력하세요." />

    <TextView
        android:text="ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idText"
        android:layout_alignBaseline="@+id/inputID"
        android:layout_alignBottom="@+id/inputID"
        android:layout_alignStart="@+id/nameText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/inputID"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/inputName"
        android:layout_alignStart="@+id/inputName"
        android:hint="특수문자 금지." />

    <TextView
        android:text="PW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pwText"
        android:layout_alignBaseline="@+id/inputPw"
        android:layout_alignBottom="@+id/inputPw"
        android:layout_alignStart="@+id/idText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/inputPw"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/inputID"
        android:layout_alignStart="@+id/inputID"
        android:hint="특수문자 금지." />

    <TextView
        android:text="학번"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:id="@+id/textStuNum"
        android:layout_below="@+id/inputPw"
        android:layout_alignEnd="@+id/idText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/inputStuNum"
        android:layout_alignBaseline="@+id/textStuNum"
        android:layout_alignBottom="@+id/textStuNum"
        android:layout_alignStart="@+id/inputPw"
        android:hint="숫자만 입력하세요." />

    <TextView
        android:text="학교명"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:id="@+id/textSchoolNmae"
        android:layout_below="@+id/inputStuNum"
        android:layout_alignStart="@+id/textStuNum" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/inputStuNum"
        android:layout_alignStart="@+id/inputStuNum"
        android:layout_marginTop="29dp"
        android:id="@+id/inputSchoolName"
        android:hint="학교명 검색"
        android:layout_toStartOf="@+id/searchSchool" />

    <Button
        android:text="submit"
        android:id="@+id/submit"
        android:onClick="submitButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:width="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

    <Button
        android:text="검색"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchSchool"
        android:onClick="searchButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        android:layout_alignBottom="@+id/inputSchoolName"
        android:layout_alignTop="@+id/inputSchoolName" />

    <CheckBox
        android:text="남"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxM"
        android:onClick="chkMale"
        android:layout_below="@+id/inputSchoolName"
        android:layout_alignStart="@+id/pwText"
        android:layout_marginTop="19dp" />

    <CheckBox
        android:text="여"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxW"
        android:onClick="chkFemale"
        android:layout_alignBaseline="@+id/checkBoxM"
        android:layout_alignBottom="@+id/checkBoxM"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
