<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.Activity.LoginActivity">

    <TextView
        android:text="이름"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="29dp"
        android:id="@+id/name_Text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/input_Name"
        android:layout_alignBaseline="@+id/name_Text"
        android:layout_alignBottom="@+id/name_Text"
        android:layout_centerHorizontal="true"
        android:hint="실명을 입력하세요." />

    <TextView
        android:text="ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_Text"
        android:layout_alignBaseline="@+id/input_Id"
        android:layout_alignBottom="@+id/input_Id"
        android:layout_alignStart="@+id/name_Text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/input_Id"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/input_Name"
        android:layout_alignStart="@+id/input_Name"
        android:hint="특수문자 금지." />

    <TextView
        android:text="PW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pw_Text"
        android:layout_alignBaseline="@+id/input_Pw"
        android:layout_alignBottom="@+id/input_Pw"
        android:layout_alignStart="@+id/id_Text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/input_Pw"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/input_Id"
        android:layout_alignStart="@+id/input_Id"
        android:hint="특수문자 금지." />

    <TextView
        android:text="학번"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:id="@+id/text_Stu_Num"
        android:layout_below="@+id/input_Pw"
        android:layout_alignEnd="@+id/id_Text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/input_Stu_Num"
        android:layout_alignBaseline="@+id/text_Stu_Num"
        android:layout_alignBottom="@+id/text_Stu_Num"
        android:layout_alignStart="@+id/input_Pw"
        android:hint="숫자만 입력하세요." />

    <TextView
        android:text="학교명"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:id="@+id/text_School_Nmae"
        android:layout_below="@+id/input_Stu_Num"
        android:layout_alignStart="@+id/text_Stu_Num" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/input_Stu_Num"
        android:layout_alignStart="@+id/input_Stu_Num"
        android:layout_marginTop="29dp"
        android:id="@+id/input_School_Name"
        android:hint="학교명 검색"
        android:layout_toStartOf="@+id/search_School" />

    <Button
        android:text="검색"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_School"
        android:onClick="search_Button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        android:layout_alignBottom="@+id/input_School_Name"
        android:layout_alignTop="@+id/input_School_Name" />

    <Button
        android:text="cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submit"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:id="@+id/cancel"
        android:layout_alignParentEnd="true"
        android:onClick="cancel_Button" />

    <Button
        android:text="submit"
        android:id="@+id/submit"
        android:width="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/input_School_Name"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/input_School_Name"
        android:layout_alignParentStart="true">

        <TextView
            android:text="성별"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_sex"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            />

        <RadioGroup
           android:id="@+id/rdgroup"
           android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            >

            <RadioButton
                android:text="남"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/rd_Male"
                />

            <RadioButton
                android:text="여"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/rd_Female"
                android:layout_alignBaseline="@+id/rd_Male"
                android:layout_alignBottom="@+id/rd_Male"
                android:layout_centerHorizontal="true" />
        </RadioGroup>
    </LinearLayout>
</RelativeLayout>